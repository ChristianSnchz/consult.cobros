{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "Node",
    "noEmit": true,
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*"
  ]
}
